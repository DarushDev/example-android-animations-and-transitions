<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_main_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <Button
            android:id="@+id/button_main_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal" />

        <Button
            android:id="@+id/button_main_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical" />

        <Button
            android:id="@+id/button_main_diagonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagonal" />
    </LinearLayout>


    <TextView
        android:id="@+id/text_main_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Horizontally" />

</LinearLayout>